<h1>Welcome to Book Connect!</h1>
<h5>A place to connect with book lovers everywhere.</h5>

<% if !logged_in? %>
<h3>Sign Up</h3>
<%= render partial: 'users/form', locals: {user: @user}  %>
<% end %>


<h3>Upcoming Book Clubs</h3>

<div id = "upcoming" class = "row">
  <% @upcoming.each do |club| %>
    <div class= 'col-lg-3'>
      <img src= <%= club.book.url %> alt=<%= club.book.title %> class='center-block'>
     <p class= 'text-center'> <%= link_to club.name, book_path(club.book) %> </p>
    </div>
  <% end %>

</div>

<h3>Open Book Clubs</h3>

<div class = 'row' id = "open">
  <% @open.each do |club| %>
    <div class= 'col-lg-3'>
      <img src= <%= club.book.url %> alt=<%= club.book.title %> class='center-block'>
      <p class= 'text-center'> <%= link_to club.name, book_path(club.book) %> </p>
    </div>
  <% end %>
</div> <br>