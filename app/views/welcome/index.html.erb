<h1>Welcome to Book Connect</h1>

<% if !logged_in? %>
<h3>Sign Up</h3>
<%= render partial: 'users/form', locals: {user: @user}  %>
<% end %>


<h3>Upcoming Book Clubs</h3>

<div id = "upcoming">
  <% @upcoming.each do |club| %>
    <%= link_to club.name, book_path(club.book) %>
    <% end %>

</div>

<h3>Open Book Clubs</h3>

<div id = "open">
  <% @open.each do |club| %>
    <%= link_to club.name, book_path(club.book) %>
    <% end %>
</div>

<% if logged_in? %>
<h3>Search for a book</h3>
<div id = "search">
 <%= form_tag books_path, :method => 'get' do %>
  <p>
    <%= label_tag "Search for a book by title:" %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>
<% end %>