<%= form_tag(invitations_path, method: 'POST') do %>
  <%= hidden_field_tag "invitations[club_id]", club.id%>
  <%= hidden_field_tag "invitations[user_id]", current_user.id %>
  <%= label_tag :name %>
  <%= text_field_tag "invitations[name]" %>
  <%= label_tag :email %>
  <%= text_field_tag "invitations[email]" %>
  <%= submit_tag "Invite Friends" %>
<% end %>
